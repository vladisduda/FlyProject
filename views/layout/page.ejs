<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="/stylesheets/style.css" />
		<title><%= title %></title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			type="text/css"
		/>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
	</head>
	<body class="text-bg-dark p-3">
		<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
			<div class="container-fluid">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="/">Главная</a>
					</li>

					<% if(typeof nav == 'object' && nav){ nav.forEach(function(gif){ %>
					<li class="nav-item">
						<a class="nav-link" href="/gifs/<%=gif.nick%>"><%=gif.title%></a>
					</li>
					<% })} %>
				</ul>

				<ul class="nav navbar-nav navbar-right">
					<li class="nav-link disabled">Счетчик: <%= counter %></li>
					<%if(user){%>
					<form action="/logout" method="post">
						<li>
							<button type="submit" class="btn btn-dark">Выйти</button>
						</li>
					</form>
					<% } else { %>
					<li><a class="btn btn-secondary" href="/logreg">Войти</a></li>
					<% } %>
				</ul>
			</div>
		</nav>
		<div class="container-xxl bd-gutter mt-3 my-md-4 bd-layout">
			<%- body %>
		</div>
	</body>
</html>
